<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.realtalkenglishwithAI.fragment.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_storyReadingFragment"
            app:destination="@id/storyReadingFragment" />
    </fragment>

    <fragment
        android:id="@+id/practiceFragment"
        android:name="com.example.realtalkenglishwithAI.fragment.PracticeFragment"
        android:label="Practice"
        tools:layout="@layout/fragment_practice" />

    <fragment
        android:id="@+id/progressFragment"
        android:name="com.example.realtalkenglishwithAI.fragment.ProgressFragment"
        android:label="Progress"
        tools:layout="@layout/fragment_progress" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.realtalkenglishwithAI.fragment.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <!-- This destination is now a Fragment that hosts our Composable screen -->
    <fragment
        android:id="@+id/storyReadingFragment"
        android:name="com.example.realtalkenglishwithAI.fragment.StoryReadingComposeFragment"
        android:label="Read Story"
        tools:layout="@layout/fragment_story_reading_compose">
        <argument
            android:name="story_content"
            app:argType="string" />
        <argument
            android:name="story_title"
            app:argType="string" />
    </fragment>

</navigation>